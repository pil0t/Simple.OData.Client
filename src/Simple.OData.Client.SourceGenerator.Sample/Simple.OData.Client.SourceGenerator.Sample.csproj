<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <RootNamespace>Simple.OData.Client.SourceGenerator.Sample</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.OData.Edm" Version="7.9.3" />
        <PackageReference Include="Microsoft.Spatial" Version="7.9.3" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Simple.OData.Client.Core\Simple.OData.Client.Core.csproj" />
      <ProjectReference Include="..\Simple.OData.Client.SourceGenerator\Simple.OData.Client.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true" GeneratePathProperty="true" PrivateAssets="all" />
      <ProjectReference Include="..\Simple.OData.Client.V4.Adapter\Simple.OData.Client.V4.Adapter.csproj" />
    </ItemGroup>
    <PropertyGroup>
        <!-- Use following lines to write the generated files to disk. -->
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)\GeneratedFiles</CompilerGeneratedFilesOutputPath>
    </PropertyGroup>

</Project>
